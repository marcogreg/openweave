<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Contests
        </h1>
        <ol class="breadcrumb">

        		{{#link-to 'index' tagName="li" replace=true  }}
             <i class="fa fa-fw fa-dashboard"></i><a> Dashboard</a>
            {{/link-to}}
            {{#link-to 'contests' tagName="li" replace=true  }}
             <i class="fa fa-fw fa-table"></i> Contests
            {{/link-to}}
        </ol>
    </div>
</div>


<div class="row">
  <div class="col-lg-12">
      <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
              <thead>
                  <tr>
                      <th>ID</th>
                      <th>Title Contest</th>
                      <th>N. Projects</th>
                      <th>Win Awards</th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>

              	{{#each model}}
              		<tr class="{{unbound this.status}}">
                      <td>{{this.id	}}</td>
                      <td>{{#link-to 'contest.edit' this}}{{this.name}}{{/link-to}}</td>
                      <td>{{this.projects	}}</td>
                      <td>â‚¬ {{this.win	}}</td>
                      <td>{{#link-to 'gallery' tagName="button" replace=true  class="btn btn-sm btn-primary"}}Vedi Progetti{{/link-to}}</td>
                  </tr>
							 	{{/each}}
              </tbody>
          </table>
      </div>
  </div>
</div>

